<nav class="navbar navbar-expand-lg bg-dark navbar-dark">
    <ul class="navbar-nav">
      <li class="nav-item"><a class="nav-link" href="/pokemon">Pokedex</a></li>
      <li class="nav-item"><a class="nav-link" href="/move">Moves</a></li>
      <li class="nav-item"><a class="nav-link" href="/type">Types</a></li>
      <li class="nav-item"><a class="nav-link" href="/trainer">Trainers</a></li>
      <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
    </ul>
    <%= form_with(url: search_results_trainer_index_path, method: "get",class:"form-inline", local: true) do %>
      <%= text_field_tag(:query,"",class:"form-control mr-sm-2", placeholder:"Search trainers") %>
      <%= submit_tag("Search",class:"btn btn-success " ) %>
    <% end %>
</nav>

<h1 style="margin-left:auto">Trainer Search results for "<%=@query%>"</h1>
<h3>Results: <%=@trainerCount%></h3>

<div class="container" style="margin:auto;">
  <% @trainer.each do |train|%>
  <div class="card bg-dark text-white" style="margin-bottom:10px;margin-left:10px;width:500px;float:left;">
    <div class="card-body">
      <h4 class="card-title"><%=link_to train.name, train%></h4>
      <p class="card-text">Age: <%= train.age%></p>
    </div>
  </div>
  <% end %>
  <%==pagy_nav(@pagy)%>
</div>
