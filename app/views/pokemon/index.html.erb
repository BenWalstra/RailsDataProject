<h1 style="margin-left:640px">Pokemon</h1>

<div class="container" style="margin: 0 auto;">
  <% @pokemon.each do |poke|%>
  <div class="card bg-dark text-white" style="margin-bottom:10px;margin-left:10px;width:500px;float:left;">
    <div class="card-body">
      <h4 class="card-title"><%=link_to poke.name, poke%></h4>
      <p class="card-text">HP: <%= poke.hp%></p>
      <p class="card-text">Attack: <%= poke.attack%></p>
      <p class="card-text">Defense: <%= poke.defence%></p>
      <p class="card-text">Speed: <%= poke.speed%></p>
      <p class="card-text">SpAttack <%= poke.spAttack%></p>
      <p class="card-text">SpDefense <%= poke.spDefense%></p>
      <p class="card-text"><%=if poke.type.count > 1
          'Types: '
        else
          'Type: '
        end %>
        <% poke.type.each do |ty|%>
        <%=link_to ty.pokemonType, ty%>
        <% end %>
      </p>
    </div>
  </div>
  <% end %>
  <%==pagy_nav(@pagy)%>
</div>


