<div class="card" style="width: 20rem;margin:0 auto;margin-top:10px;">
  <div class="card-body">
    <h3 class="card-title"><%= @move.move%></h3>
      <p class="card-text">HP: <%= @move.accuracy%></p>
      <p class="card-text">Attack: <%= @move.power%></p>
      <p class="card-text">Defense: <%= @move.pp%></p>
      <p class="card-text">Type: <%=link_to @move.type.pokemonType, @move.type%></p>
  </div>
</div>

<h3 style="margin-left:550px;margin-top:10px;">Pokemon that use <%= @move.move%></h3>

<div class="container" style="margin: 0 auto;">
  <% @pokemonWithMove.each do |poke|%>
  <div class="card bg-dark text-white" style="margin-bottom:10px;margin-left:10px;width:500px;float:left;">
    <div class="card-body">
      <h4 class="card-title"><%=link_to poke.name, poke%></h4>
    </div>
  </div>
  <% end %>
  <%==pagy_nav(@pagy)%>
</div>